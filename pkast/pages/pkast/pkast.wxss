/* pages/pkast/pkast.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #e2fae0;
}

.shadow-text{
  text-shadow: 5px 5px 5px #888;
}

.flex-wrp-row{
  display: flex;
  flex-direction: row;
  margin-top: 0.2em;
}

.margin-lr{
  margin-left: 0.5em;
  margin-right: 0.5em;  
}

#location_selector{
  color: #555;
  
}

#entry{
  margin-top: 0.5em;
}

#user-enter{
  color: #0000dd;
  font-weight: bolder;
  border-style:solid;
  font-family:"Times New Roman";
  border:thin double #0000ee;
  margin-top: 0.2em;
  margin-bottom: 0.2em;
  margin-left: 0.5em;
  margin-right: 0.5em;
  padding-left: 0.2em;
  min-width: 10em;
  box-shadow: 5px 5px 5px #888;
}

.bbs-header{
  color: #fcf234;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
}

.line{
    height: 16px;
    border-bottom: 1px solid #666;
    text-align: center;
    margin-left: 0.5em;
    margin-right: 0.5em;    
}

#num-mult-sel{  
  min-width: 2.5em;
}

#num-edit{
  max-width: 5em;
  vertical-align: middle;
}

#contact-btn{
  float: right;
  box-shadow: 5px 5px 5px #888;
}

.flex-wrp-column{
  display: flex;
  flex-direction: column;
}

#bbs{
  border-style:dotted;
  border:thin double #666;
  margin-top: 0.2em;
  margin-bottom: 0.2em;
}

.ul_style{
  padding: 0.3em;
  margin-top:0.5em;
  color: #666;  
}